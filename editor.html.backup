<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fragen-Editor - FFW Fragenkatalog</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        header {
            background: linear-gradient(135deg, #b30000 0%, #8b0000 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        header h1 {
            font-size: 2em;
            margin-bottom: 10px;
        }

        header p {
            font-size: 1.1em;
            opacity: 0.9;
        }

        .content {
            padding: 30px;
        }

        .section {
            margin-bottom: 30px;
        }

        .section h2 {
            color: #b30000;
            margin-bottom: 15px;
            font-size: 1.5em;
            border-bottom: 2px solid #b30000;
            padding-bottom: 10px;
        }

        .controls {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        select, button, input[type="file"] {
            padding: 12px 20px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
        }

        select {
            flex: 1;
            min-width: 250px;
        }

        button {
            background: linear-gradient(135deg, #b30000 0%, #8b0000 100%);
            color: white;
            border: none;
            font-weight: bold;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(179, 0, 0, 0.3);
        }

        button:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }

        .question-list {
            display: grid;
            gap: 15px;
            margin-top: 20px;
        }

        .question-card {
            background: #f9f9f9;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 20px;
            transition: all 0.3s;
        }

        .question-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-color: #b30000;
        }

        .question-card.placeholder {
            background: #fff3cd;
            border-color: #ffc107;
        }

        .question-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .question-number {
            font-weight: bold;
            font-size: 1.2em;
            color: #b30000;
        }

        .question-badge {
            background: #ffc107;
            color: #333;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: bold;
        }

        .question-text {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            margin-bottom: 15px;
            font-family: inherit;
            resize: vertical;
            min-height: 80px;
        }

        .answers {
            display: grid;
            gap: 10px;
            margin-bottom: 15px;
        }

        .answer-row {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .answer-row input[type="radio"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .answer-row input[type="text"] {
            flex: 1;
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }

        .answer-row.correct input[type="text"] {
            border-color: #28a745;
            background: #f0fff4;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .action-buttons button {
            flex: 1;
            padding: 10px;
            font-size: 14px;
        }

        .btn-save {
            background: linear-gradient(135deg, #28a745 0%, #20803a 100%);
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #a82835 100%);
        }

        .btn-add-question {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            margin-top: 20px;
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        }

        .stats {
            background: #f0f0f0;
            padding: 20px;
            border-radius: 10px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 2em;
            font-weight: bold;
            color: #b30000;
        }

        .stat-label {
            color: #666;
            margin-top: 5px;
        }

        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .alert-info {
            background: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-warning {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        .hidden {
            display: none;
        }

        .export-section {
            margin-top: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .export-buttons {
            display: flex;
            gap: 15px;
            margin-top: 15px;
        }

        .image-section {
            margin: 15px 0;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px dashed #ddd;
        }

        .image-section h4 {
            margin-bottom: 10px;
            color: #555;
        }

        .image-controls {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }

        .image-select {
            flex: 1;
            min-width: 200px;
            padding: 8px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }

        .image-preview {
            max-width: 300px;
            max-height: 200px;
            margin-top: 10px;
            border: 2px solid #ddd;
            border-radius: 8px;
            display: block;
        }

        .image-preview.hidden {
            display: none;
        }

        .btn-remove-image {
            background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
            padding: 8px 15px;
            font-size: 14px;
        }

        @media (max-width: 768px) {
            .controls {
                flex-direction: column;
            }

            select, button {
                width: 100%;
            }

            .stats {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .image-controls {
                flex-direction: column;
                align-items: stretch;
            }

            .image-preview {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>üöí Fragen-Editor</h1>
            <p>FFW Willingshausen - Fragenkatalog bearbeiten</p>
        </header>

        <div class="content">
            <div class="section">
                <h2>üìÇ Kapitel ausw√§hlen</h2>
                <div class="controls">
                    <select id="chapterSelect">
                        <option value="">-- Kapitel ausw√§hlen --</option>
                    </select>
                    <button onclick="loadChapter()">Kapitel laden</button>
                    <button onclick="exportChapter()" id="exportBtn" disabled>üíæ Als JSON exportieren</button>
                </div>
            </div>

            <div id="statsSection" class="hidden">
                <div class="stats">
                    <div class="stat-item">
                        <div class="stat-value" id="totalQuestions">0</div>
                        <div class="stat-label">Gesamt Fragen</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="placeholderCount">0</div>
                        <div class="stat-label">Platzhalter</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="completedCount">0</div>
                        <div class="stat-label">Vollst√§ndig</div>
                    </div>
                </div>
            </div>

            <div id="alertSection"></div>

            <div id="questionSection" class="hidden">
                <div class="section">
                    <h2>üìù Fragen bearbeiten</h2>
                    <div id="questionList" class="question-list"></div>
                    <button class="btn-add-question" onclick="addNewQuestion()">‚ûï Neue Frage hinzuf√ºgen</button>
                </div>
            </div>

            <div class="export-section">
                <h2>‚ÑπÔ∏è Anleitung</h2>
                <p><strong>So verwenden Sie den Editor:</strong></p>
                <ol style="margin-left: 20px; margin-top: 10px; line-height: 1.8;">
                    <li>W√§hlen Sie ein Kapitel aus dem Dropdown-Men√º</li>
                    <li>Klicken Sie auf "Kapitel laden" um alle Fragen anzuzeigen</li>
                    <li>Bearbeiten Sie Fragen direkt im Browser</li>
                    <li>Markieren Sie die richtige Antwort mit dem Radio-Button</li>
                    <li>Speichern Sie jede Frage einzeln mit dem "√Ñnderungen speichern" Button</li>
                    <li>Exportieren Sie das komplette Kapitel als JSON-Datei</li>
                    <li>Ersetzen Sie die Datei in <code>data/[Kapitelname].json</code></li>
                </ol>
                <p style="margin-top: 15px;"><strong>‚ö†Ô∏è Hinweis:</strong> Platzhalter-Fragen sind gelb markiert und m√ºssen mit echten Daten aus dem PDF gef√ºllt werden.</p>
            </div>
        </div>
    </div>

    <script>
        let chapters = [];
        let currentChapter = null;
        let currentData = null;

        // Load chapter list
        fetch('data/meta.json')
            .then(r => r.json())
            .then(data => {
                chapters = data.chapters;
                const select = document.getElementById('chapterSelect');
                chapters.forEach(ch => {
                    const option = document.createElement('option');
                    option.value = ch;
                    option.text = formatChapterName(ch);
                    select.appendChild(option);
                });
            })
            .catch(err => {
                showAlert('Fehler beim Laden der Kapitelliste: ' + err.message, 'warning');
            });

        function formatChapterName(filename) {
            return filename.replace('.json', '').replace(/-/g, ' ');
        }

        function loadChapter() {
            const select = document.getElementById('chapterSelect');
            const chapterFile = select.value;
            
            if (!chapterFile) {
                showAlert('Bitte w√§hlen Sie ein Kapitel aus.', 'warning');
                return;
            }

            currentChapter = chapterFile;

            fetch(`data/${chapterFile}`)
                .then(r => r.json())
                .then(data => {
                    currentData = data;
                    displayQuestions();
                    updateStats();
                    document.getElementById('exportBtn').disabled = false;
                    document.getElementById('statsSection').classList.remove('hidden');
                    document.getElementById('questionSection').classList.remove('hidden');
                    showAlert('Kapitel erfolgreich geladen!', 'success');
                })
                .catch(err => {
                    showAlert('Fehler beim Laden des Kapitels: ' + err.message, 'warning');
                });
        }

        function displayQuestions() {
            const list = document.getElementById('questionList');
            list.innerHTML = '';

            currentData.questions.forEach((q, index) => {
                const card = createQuestionCard(q, index);
                list.appendChild(card);
            });
        }

        function createQuestionCard(question, index) {
            const div = document.createElement('div');
            div.className = 'question-card' + (question.placeholder ? ' placeholder' : '');
            
            const isPlaceholder = question.placeholder ? '<span class="question-badge">PLATZHALTER</span>' : '';
            
            div.innerHTML = `
                <div class="question-header">
                    <span class="question-number">Frage ${index + 1}</span>
                    ${isPlaceholder}
                </div>
                <textarea class="question-text" id="q-text-${index}">${question.question}</textarea>
                <div class="answers">
                    ${question.answers.map((ans, i) => `
                        <div class="answer-row ${i === question.correctIndex ? 'correct' : ''}">
                            <input type="radio" name="correct-${index}" value="${i}" ${i === question.correctIndex ? 'checked' : ''} onchange="updateCorrectAnswer(${index}, ${i})">
                            <input type="text" id="q-${index}-a-${i}" value="${ans}" placeholder="Antwort ${i + 1}">
                        </div>
                    `).join('')}
                </div>
                <div class="action-buttons">
                    <button class="btn-save" onclick="saveQuestion(${index})">üíæ √Ñnderungen speichern</button>
                    <button class="btn-delete" onclick="deleteQuestion(${index})">üóëÔ∏è Frage l√∂schen</button>
                </div>
            `;
            
            return div;
        }

        function updateCorrectAnswer(questionIndex, answerIndex) {
            currentData.questions[questionIndex].correctIndex = answerIndex;
            
            // Update visual feedback
            const card = document.querySelectorAll('.question-card')[questionIndex];
            const rows = card.querySelectorAll('.answer-row');
            rows.forEach((row, i) => {
                if (i === answerIndex) {
                    row.classList.add('correct');
                } else {
                    row.classList.remove('correct');
                }
            });
        }

        function saveQuestion(index) {
            const question = currentData.questions[index];
            
            // Update question text
            question.question = document.getElementById(`q-text-${index}`).value;
            
            // Update answers
            question.answers = [
                document.getElementById(`q-${index}-a-0`).value,
                document.getElementById(`q-${index}-a-1`).value,
                document.getElementById(`q-${index}-a-2`).value
            ];
            
            // Remove placeholder flag if it was a placeholder
            if (question.placeholder && !question.question.includes('[PLATZHALTER]')) {
                delete question.placeholder;
                delete question.note;
            }
            
            updateStats();
            showAlert(`Frage ${index + 1} wurde gespeichert!`, 'success');
            
            // Refresh the card to update placeholder status
            const list = document.getElementById('questionList');
            const cards = list.querySelectorAll('.question-card');
            const oldCard = cards[index];
            const newCard = createQuestionCard(question, index);
            oldCard.replaceWith(newCard);
        }

        function deleteQuestion(index) {
            if (!confirm(`M√∂chten Sie Frage ${index + 1} wirklich l√∂schen?`)) {
                return;
            }
            
            currentData.questions.splice(index, 1);
            displayQuestions();
            updateStats();
            showAlert('Frage wurde gel√∂scht!', 'info');
        }

        function addNewQuestion() {
            const newQuestion = {
                question: 'Neue Frage hier eingeben?',
                answers: [
                    'Antwort 1',
                    'Antwort 2',
                    'Antwort 3'
                ],
                correctIndex: 0
            };
            
            currentData.questions.push(newQuestion);
            displayQuestions();
            updateStats();
            
            // Scroll to the new question
            const list = document.getElementById('questionList');
            list.lastElementChild.scrollIntoView({ behavior: 'smooth' });
            
            showAlert('Neue Frage hinzugef√ºgt!', 'success');
        }

        function updateStats() {
            if (!currentData) return;
            
            const total = currentData.questions.length;
            const placeholders = currentData.questions.filter(q => q.placeholder).length;
            const completed = total - placeholders;
            
            document.getElementById('totalQuestions').textContent = total;
            document.getElementById('placeholderCount').textContent = placeholders;
            document.getElementById('completedCount').textContent = completed;
        }

        function exportChapter() {
            if (!currentData) return;
            
            const jsonStr = JSON.stringify(currentData, null, 2);
            const blob = new Blob([jsonStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = currentChapter;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showAlert(`Kapitel wurde als ${currentChapter} exportiert!`, 'success');
        }

        function showAlert(message, type) {
            const alertSection = document.getElementById('alertSection');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            alertSection.innerHTML = '';
            alertSection.appendChild(alert);
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
    </script>
</body>
</html>
